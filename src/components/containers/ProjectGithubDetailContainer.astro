---
interface Props {
  title: string;
  value: string;
  className?: string;
}

const { title, value, className = "" } = Astro.props;
---

<div class={className}>
  <h3 class="text-md text-text-github-detail font-bold">{title}</h3>
  <div class="flex gap-2 items-center">
    <slot />
    <span class="text-xl font-medium">{value}</span>
  </div>
</div>

