---
import SkillBadge from "@components/SkillBadge.astro";
import type { Skill } from "@types";

interface Props {
  skills: Skill[];
}

const { skills } = Astro.props;
skills.sort((a, b) => a.order - b.order);
---

<ul class="flex flex-wrap gap-3 mt-4">
  {skills.length > 0 && skills.map(skill => (
    <SkillBadge {...skill} />
  ))}

  {skills.length === 0 && 
    <SkillBadge id="none" lang="Sin Habilidades" color="#8b5cf6" order={1} />
  }
</ul>