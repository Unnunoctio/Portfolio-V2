---
import SkillList from '@components/SkillList.astro';
import type { Skill } from '@types';

interface Props {
  title: string;
  skills: Skill[];
}

const { title, skills } = Astro.props;
---

<section class="mt-14 p-4 w-full max-w-[520px] bg-bg-tertiary rounded-2xl shadow-primary">
  <h3 class="text-2xl">{title}</h3>
  <SkillList skills={skills} />
</section>